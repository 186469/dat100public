import java.util.Scanner;

public class main11logicalOperators {

	public static void main(String[] args) {

	//Logical operators
	//Logiske operatorer = brukes til å koble sammen to eller flere uttrykk
	// && = (og) begge betingelsene må være sanne
	// || = (eller) en av betingelsene må være sann
	// ! = (ikke) reverserer den boolean verdien av betingelsen
		
		int temp = 25;		// && eksempel
		if(temp>30) {
			System.out.println("Det er dritt varmt ute");
		}
		else if(temp>=20 && temp <=30) {	//Begge påstandene må være sann
			System.out.println("Det er varmt ute");
		}
		else {
			System.out.println("Det er kaldt ute");
		}
		
		// || eksempel
		Scanner scanner = new Scanner(System.in);
		System.out.println("Du spiller et spill! Trykk q eller Q for å stoppe");
		String response = scanner.next();
		if(response.equals("q")|| response.equals("Q")) {	// Hvis jeg trykker q eller Q vil spillet slutte
			System.out.println("Du sluttet å spille");
		}
		else {
			System.out.println("Du spiller spillet enda");
			}
		
		
	}

}
